<%- include ./partials/navBar%>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">Modification d'une user story</h1>
            <% include ./partials/message%>
            <form action="/project/<%= projectId %>/editUserStory/<%= userStory.id %>" method="POST">
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Description de la user story</label>
                    <textarea class="form-control" value="<%= userStory.description %>" 
                        id="description" name="description" rows="4"><%= userStory.description %></textarea>
                </div>
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Difficulté de la user story</label>
                    <input type="number" id="difficulty" name="difficulty" class="form-control" min="1" max="10" value="<%= userStory.difficulty %>" style="width:100%" required />
                </div>
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Priorité de la user story</label>
                    <input type="hidden" name="userStory" value="<%= JSON.stringify(userStory) %>">
                    <input type="number" id="priority" name="priority" class="form-control" value="<%= userStory.priority %>" style="width:100%" required min="1" max="3"/>
                </div>

                <button type="submit" class="btn btn-primary" id="submitModifyUserstory">Modifier</button>

            </form>
        </div>
    </div>
</div>