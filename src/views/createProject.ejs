<% include ./partials/navBar%>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">Création de projet</h1>
            <% include ./partials/message%>
            <form action="/createProject" method="POST">
                <div class="form-group">
                    <label for="name">Nom</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Entrez le nom de votre projet" />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" class="form-control"
                        placeholder="Décrivez votre projet en quelques lignes ..." />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Créer un projet</button>
            </form>
        </div>
    </div>
</div>